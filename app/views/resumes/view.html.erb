<h1 class="heading"><%= @resume.user.name %></h1>

<section class="grid grid-cols-2 gap-4">
  <article>

    <%= form_with(model: @resume, url: tag_resume_path(@resume), method: "patch") do |form| %>
      <%= form.label :tag, "標籤" %>
      <%= form.text_field :tag, data: {controller: "tag"} %>
      <%= form.submit "更新" %>
    <% end %>

    <div class="bg-gray-50">
      <%= @resume.content %>
    </div>
  </article>
  <section>
    <%= form_with(model: [@resume, @comment], data: { remote: true }) do |form| %>
      <div class="field">
        <%= form.label :content, "評論" %>
        <%= form.text_area :content, class: "rounded px-2 py-1 border border-gray-300" %>
      </div>
      <%= form.submit %>
    <% end %>
    <div class="comments">
      <%= render @comments %>
    </div>
  </section>
</section>
